
@{
    ViewBag.Title = "Basket";
}
@using yasemin.Models
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Basket
                </div>
                <div class="container">
                    @ViewBag.total
                    
                </div>
                <div class="block-controls">
                    <a class="btn btn-warning rounded" href="/User/Buy"> Buy </a>
                </div>

                <div class="block-controls">
                    @if (BASKET.Foods.Count > 0)
                    {
                        <a class="btn btn-warning rounded" href="/Restaurant/List/@ViewBag.RestaurantId">
                            <span class="glyphicon glyphicon-home"></span>Continue Shopping
                        </a>
                    }

                    <a href="#" class="btn btn-danger allFoodDelete">
                        <span class="glyphicon glyphicon-trash"></span>
                        Empty Basket
                    </a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="table-responsive">
                        <div id="datatable-1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-xs-12">
                                    <table id="datatable-1" class="table table-striped table-hover dataTable no-footer" role="grid" aria-describedby="datatable-1_info">
                                        <thead>
                                            <tr>
                                                <th>Food Name</th>
                                                <th>Description</th>
                                                <th>Unit Price</th>
                                                <th>Quantity</th>
                                                <th>Total Price</th>
                                                <th>Delete</th>
                                            </tr>

                                        </thead>
                                        <tbody>

                                            @foreach (FOOD item in BASKET.Foods)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.FoodName
                                                    </td>


                                                    <td>
                                                        @item.FoodDescription
                                                    </td>

                                                    <td>
                                                        @item.FoodPrice
                                                    </td>

                                                    <td>
                                                        <div>
                                                            <a href="#" class="btn btn-info btn-sm decrease" data-fid="@item.FoodId">
                                                                -
                                                            </a>
                                                        </div>
                                                        @Html.TextBoxFor(x => item.FoodAmount, new { @class = "txt" })
                                                        <div>
                                                            <a href="#" class="btn btn-info btn-sm increase" data-fid="@item.FoodId">
                                                                +
                                                            </a>
                                                        </div>
                                                    </td>


                                                    <td>
                                                        @item.TotalPrice

                                                    </td>
                                                    <td><a href="#" class="btn btn-danger foodDelete" data-foodid="@item.FoodId">Delete</a></td>

                                                </tr>


                                            }

                                        </tbody>
                                    </table>

                                </div>

                            </div>

                        </div>
                    </div>
                    
                </div>
            </div>
            
        </div>
    </div>
</div>

<style>
    .txt {
        line-height: 18px;
        width: 50px !important;
        height: 32px;
        font-size: 14px;
        text-align: center;
        border: solid 1px #ccc;
        margin-left: 23px;
    }

    .increase {
        display: block;
        height: 32px;
        cursor: pointer;
        border: solid 1px #ccc;
        position: absolute;
        margin-top: -32px;
        margin-left: 72px;
    }

    .decrease {
        display: block;
        cursor: pointer;
        position: absolute;
        color: grey;
    }
</style>

@section scripts{

    <script src="~/Content/assets/js/required/jquery-1.11.1.min.js"></script>

    <script>
        $(".increase").click(function () {
            //var s = confirm("Are you sure you want to add one more of the record?");
            if (true) {
                var foodid = $(this).data("fid");
                //alert("ID=" + id);
                $.ajax(
                    {
                        type: "POST",
                        url: "/Basket/Increase/" + foodid,
                        success: function () {

                            window.location.replace("/Basket/Index/");
                        },
                        error: function () {
                            alert("Something went wrong!");
                        }
                    });
            }
            else {
                alert("Cancel");
            }

        });


    </script>

    <script>
        $(".decrease").click(function () {
            //var s = confirm("Are you sure you want to add one more of the record?");
            if (true) {
                var foodid = $(this).data("fid");
                //alert("ID=" + id);
                $.ajax(
                    {
                        type: "POST",
                        url: "/Basket/Decrease/" + foodid,
                        success: function () {

                            window.location.replace("/Basket/Index/");
                        },
                        error: function () {
                            alert("Something went wrong!");
                        }
                    });
            }
            else {
                alert("Cancel");
            }

        });


    </script>

    <script>
        $(".foodDelete").click(function () {
            var s = confirm("Are you sure you want to delete the record?");
            if (s) {
                var fid = $(this).data("foodid");
                //alert("ID=" + id);
                $.ajax(
                    {
                        type: "POST",
                        url: "/Basket/Delete/" + fid,
                        success: function () {

                            window.location.replace("/Basket/Index/");
                        },
                        error: function () {
                            alert("Something went wrong!");
                        }
                    });
            }
            else {
                alert("Cancel");
            }

        });


    </script>

    <script>
        $(".allFoodDelete").click(function () {
            var s = confirm("Are you sure you want to delete the record?");
            if (s) {
                //var fid = $(this).data("foodid");
                //alert("ID=" + id);
                $.ajax(
                    {
                        type: "POST",
                        url: "/Basket/DeleteAll/",
                        success: function () {

                            window.location.replace("/Basket/Index/");
                        },
                        error: function () {
                            alert("Something went wrong!");
                        }
                    });
            }
            else {
                alert("Cancel");
            }

        });


    </script>
}

