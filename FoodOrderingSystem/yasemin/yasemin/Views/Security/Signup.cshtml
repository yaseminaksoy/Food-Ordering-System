
@{
    ViewBag.Title = "Signup";
}

<div class="container">
    <h2>Please sign up..</h2>
    @ViewBag.message
    <form action="/Security/Signup" method="post" role="form">
        <div class="form-group">
            <label for="exampleInputEmail1">Your Mail Address</label>
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter mail address" name="MemberMail">

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Your Password</label>
            <input value="" type="text" class="form-control" id="exampleInputPassword1" placeholder="Enter your password" name="MemberPassword">
        </div>
        <div class="form-group">
            <label>
                Choose Your Account Role
                <select name="MemberRole" aria-controls="datatable-1" class="form-control input-sm">
                    <option value="U">User</option>
                    <option value="R">Restaurant</option>


                </select>
            </label>
        </div>
        <button type="submit" class="btn btn-block btn-success">Continue To Sign Up</button>
    </form>



</div>

